import java.util.Scanner;
public class examples {

	public static void main(String[] args) {
		
		Scanner scanner=new Scanner(System.in);
		
		System.out.println("Otobüs kartında kalan parayla kaç sefer otobüse binileceğini gösteren program");
		System.out.println("Bakiyenizi giriniz:");
		double bakiye=scanner.nextDouble();
		
		int otobusUcreti=7;
		
		do {
		
			int binisHakki=(int)bakiye/otobusUcreti;
			System.out.println(binisHakki+
                                     "  kere binis hakkınız kaldı");
			bakiye-=otobusUcreti;
		}
		
		     while(bakiye>0);
	}

}


