5)
/*100.musteriye hediye veren program */
import java.util.Scanner;

public class examples {

	public static void main(String[] args) {
		
		Scanner scanner=new Scanner(System.in);
		
		int i = 1;
		while(i<=100)
		{
			System.out.println("Hoşgeldiniz:"+i+" .müsterimizsiniz...");
			System.out.println("İyi günler dileriz :)");
			i++;
			
			if(i==100)
			{
				System.out.println(i+". müşterimizsiniz hediye kazandınız");
			}
			
		}
		
		
	}

}


