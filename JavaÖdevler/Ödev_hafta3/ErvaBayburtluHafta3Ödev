/*Yatırılmak istenen tutar kadar para bankamatiğe girilinceye kadar çalışan program */
import java.util.Scanner;

public class examples {

	public static void main(String[] args) {
		
		Scanner scanner=new Scanner(System.in);
		
		System.out.println("Yatırmak istediğiniz tutarı giriniz");
		int yatırılmakIstenenTutar=scanner.nextInt();

		int i=0;
		int paraGirisi;
		while(i<=yatırılmakIstenenTutar)
		{
			System.out.println("Bankamatiğe ne kadar para girisi yapıldı ?");
			paraGirisi=scanner.nextInt();
		    i=paraGirisi+i;
		    
		    if(i-yatırılmakIstenenTutar==0)
		    {
		    	break;
		    }
		    
		}
		
	}

}

